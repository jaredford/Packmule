<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:defaultValue="true"
        android:key="manual_mode"
        android:summary="@string/pref_description_manual_mode"
        android:title="@string/pref_title_manual_mode" />
    <EditTextPreference
        android:id="@+id/speed"
        android:defaultValue="@string/pref_default_speed"
        android:digits="1,2,3,4,5,6,7,8,9,0,."
        android:inputType="numberDecimal"
        android:key="speed_scale"
        android:maxLength="4"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_speed" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
